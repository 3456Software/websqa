/Navbar
.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '.navbar-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'WebSQA', root_path, class: 'navbar-brand'
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li{class: current_page?(root_path) && 'active'}<
          = link_to 'Home', root_path
        %li{class: current_page?(help_path) && 'active'}<
          = link_to 'Help', help_path
        %li{class: current_page?(about_path) && 'active'}<
          = link_to 'About', about_path
        %li{class: current_page?(contact_path) && 'active'}<
          = link_to 'Contact', contact_path
      %ul.nav.navbar-nav.navbar-right
        - if signed_in?
          %li{class: current_page?(users_path) && 'active'}<
            = link_to 'Users', users_path
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: { toggle: 'dropdown'} }<
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Profile', current_user
              %li= link_to 'Settings', edit_user_path(current_user)
              %li.divider
              %li= link_to 'Sign out', signout_path, method: 'delete'
        - else
          %li{class: current_page?(signin_path) && 'active'}<
            = link_to 'Sign in', signin_path
//Navbar
