- provide(:title, @project.title)
.row
  %aside.col-lg-4
    %section
      %h1= @project.title
      %p=  @project.desc
      - if current_user.admin?
        %p= link_to 'Project administration', edit_project_path(@project)
  .col-lg-8
    - if @project.requirements.any?
      %h3 Progress
      %ol.requirements
        = render @requirements
